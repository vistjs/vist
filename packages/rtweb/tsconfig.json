{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "dom"],
    "downlevelIteration": true
  },
  "exclude": ["test"],
  "include": [
    "src"
  ]
}
